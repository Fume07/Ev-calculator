<body>
  <div class="container">
    <h1>Optimal EV-kalkulator Polymarket</h1>
    <div class="subtitle">Gir deg nøyaktig edge, fair odds, riktig EV og Kelly-staking</div>
    <label for="fairOdds">Fair Odds (desimal, f.eks. marked uten margin)</label>
    <input id="fairOdds" type="number" min="1.01" step="0.01" value="5.00">
    <label for="marketOdds">Markedsodds (desimal, med margin)</label>
    <input id="marketOdds" type="number" min="1.01" step="0.01" value="6.00">
    <label for="polyPrice">Polymarket pris (cent per share)</label>
    <input id="polyPrice" type="number" min="1" max="99" value="16">
    <label for="stake">Din innsats ($)</label>
    <input id="stake" type="number" min="1" max="10000" value="100">
    <label for="bankroll">Bankroll ($)</label>
    <input id="bankroll" type="number" min="100" value="5000">
    <button onclick="calc()">Beregn EV og Edge</button>
    <div class="result" id="res"></div>
  </div>
  <script>
    function calc() {
      const fairOdds = parseFloat(document.getElementById('fairOdds').value);
      const marketOdds = parseFloat(document.getElementById('marketOdds').value);
      const marketPrice = parseFloat(document.getElementById('polyPrice').value) / 100;
      const stake = parseFloat(document.getElementById('stake').value);
      const bankroll = parseFloat(document.getElementById('bankroll').value);

      // Fair og market probabilitet
      const fairProb = 1 / fairOdds;
      const marketProb = 1 / marketOdds;
      const edge = fairProb - marketPrice;

      // Shares og payouts
      const shares = stake / marketPrice;
      const payout = shares * 1.00;                  // vinner payout
      const netProfit = payout - stake;              // netto gevinst per vinner
      const loss = stake;

      // EV med fair sannsynlighet
      const ev = (fairProb * netProfit) - ((1 - fairProb) * loss);
      const evPct = (ev / stake) * 100;

      // Kelly stake
      const kellyFrac = (((fairOdds - 1) * fairProb) - (1 - fairProb)) / (fairOdds - 1);
      const kellyB = Math.max(0, Math.min(kellyFrac, 0.25)) * bankroll;

      let html = `<b>Fair sannsynlighet:</b> ${(fairProb * 100).toFixed(2)}%<br>`;
      html += `<b>Marked sannsynlighet:</b> ${(marketProb * 100).toFixed(2)}%<br>`;
      html += `<b>Edge mot marked:</b> ${(edge * 100).toFixed(2)}%<br><hr>`;
      html += `<b>Antall shares:</b> ${shares.toFixed(2)}<br>`;
      html += `<b>Netto gevinst om vinner:</b> $${netProfit.toFixed(2)}<br>`;
      html += `<b>Tap om ikke vinner:</b> -$${loss.toFixed(2)}<br><hr>`;
      html += `<b>EV:</b> $${ev.toFixed(2)} (${evPct.toFixed(2)}% av innsats)<br>`;

      if(ev > 0) html += `<div class="good outcome">Positiv EV – matematisk lønnsomt over tid!</div>`;
      else if(evPct > -3) html += `<div class="warn outcome">Nær break-even – vurder risiko og edge.</div>`;
      else html += `<div class="danger outcome">Negativ EV – ikke lønnsomt bet!</div>`;

      html += `<hr><b>Kelly anbefalt innsats:</b> $${kellyB.toFixed(2)} (${(Math.max(0,Math.min(kellyFrac,0.25))*100).toFixed(2)}% av bankroll)`;

      document.getElementById('res').innerHTML = html;
    }
  </script>
</body>
</html>

