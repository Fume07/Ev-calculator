        <div class="explanation">
            <h3>üß† Formel Forklaring:</h3>
            <div class="formula">
                Edge-justerte odds = Bookmaker odds √∑ (Payout % √∑ 100)
            </div>
            <div class="formula">
                Din sannsynlighet = 1 √∑ (Edge-justerte odds)
            </div>
            <div class="formula">
                EV per share = Din sannsynlighet ‚àí Polymarket pris (i dollar)
            </div>
            <div class="formula">
                Total EV = Antall shares √ó EV per share
            </div>
            <p><strong>Hvor:</strong></p>
            <ul>
                <li><strong>Antall shares:</strong> Innsats √∑ (Polymarket pris √∑ 100).</li>
                <li><strong>Polymarket pris (dollar):</strong> Cent √∑ 100 (f.eks. 56 ‚Üí 0.56 USD).</li>
                <li><strong>EV per 1 USD risk:</strong> Total EV √∑ Innsats.</li>
            </ul>
        </div>

        <div class="warning">
            <strong>‚ö†Ô∏è Viktig:</strong> Kalkulatoren antar at bookmaker-oddsen er ¬´sann¬ª sannsynlighet etter edge-justering.
            Det tas ikke hensyn til evt. trading fees eller at du kan trade ut f√∏r markedet resolves.
        </div>
    </div>

    <script>
        function val(v) {
            if (!v) return NaN;
            v = v.toString().trim().replace(',', '.');
            return parseFloat(v);
        }

        function calculateEV() {
            const bookmakerOdds = val(document.getElementById('bookmakerOdds').value);
            const payoutPercent = val(document.getElementById('payoutPercent').value);
            const polymarketPriceCents = val(document.getElementById('polymarketPrice').value);
            const betAmount = val(document.getElementById('betAmount').value);

            // Hvis noe mangler eller ikke er tall -> skjul resultat
            if (!bookmakerOdds || !payoutPercent || !polymarketPriceCents || !betAmount) {
                document.getElementById('results').style.display = 'none';
                return;
            }

            const polymarketPrice = polymarketPriceCents / 100; // 0‚Äì1
            const edgeAdjustedOdds = bookmakerOdds / (payoutPercent / 100);
            const impliedProbability = 1 / edgeAdjustedOdds;

            const numberOfShares = betAmount / polymarketPrice;

            const potentialWinAmount = numberOfShares * 1.00;
            const potentialProfitAmount = potentialWinAmount - betAmount;
            const potentialLossAmount = betAmount;

            // EV per share og total EV
            const evPerShare = impliedProbability - polymarketPrice;
            const expectedValue = numberOfShares * evPerShare;

            // EV som % av innsats (per 1 USD risk)
            const evPerDollarRisk = expectedValue / betAmount;
            const evPercentage = evPerDollarRisk * 100;

            // --- Render resultater ---
            document.getElementById('edgeAdjustedOdds').innerHTML =
                `<strong>Edge-justerte odds:</strong> ${edgeAdjustedOdds.toFixed(3)}`;

            document.getElementById('impliedProbability').innerHTML =
                `<strong>Implisitt sannsynlighet (etter edge):</strong> ${(impliedProbability * 100).toFixed(2)}%`;

            document.getElementById('polymarketPriceDisplay').innerHTML =
                `<strong>Polymarket pris:</strong> ${polymarketPriceCents}¬¢ ($${polymarketPrice.toFixed(2)})`;

            document.getElementById('numberOfShares').innerHTML =
                `<strong>Antall shares:</strong> ${numberOfShares.toFixed(2)}`;

            document.getElementById('potentialWin').innerHTML =
                `<strong>Potensiell gevinst ved seier:</strong> $${potentialProfitAmount.toFixed(2)} (total utbetaling: $${potentialWinAmount.toFixed(2)})`;

            document.getElementById('potentialLoss').innerHTML =
                `<strong>Potensiell tap:</strong> $${potentialLossAmount.toFixed(2)}`;

            // EV per share
            const evPerShareElem = document.getElementById('evPerShare');
            evPerShareElem.innerHTML =
                `<strong>EV per share:</strong> $${evPerShare.toFixed(4)} (per kontrakt som betaler $1 ved seier)`;

            // EV per 1 USD risk
            const evPerDollarElem = document.getElementById('evPerDollarRisk');
            evPerDollarElem.innerHTML =
                `<strong>EV per 1 USD risk:</strong> ${evPercentage.toFixed(2)}%`;

            // Total EV
            const evElement = document.getElementById('expectedValue');
            evElement.innerHTML = `<strong>Total EV (for hele innsatsen):</strong> $${expectedValue.toFixed(2)}`;

            if (expectedValue > 0) {
                evElement.className = 'result-item positive';
            } else if (expectedValue < 0) {
                evElement.className = 'result-item negative';
            } else {
                evElement.className = 'result-item neutral';
            }

            const evPercentElement = document.getElementById('evPercentage');
            evPercentElement.innerHTML =
                `<strong>EV som % av innsats:</strong> ${evPercentage.toFixed(2)}%`;
            evPercentElement.className =
                expectedValue > 0 ? 'result-item positive' :
                expectedValue < 0 ? 'result-item negative' :
                'result-item neutral';

            // Anbefaling basert p√• EV%
            const recommendationElement = document.getElementById('recommendation');
            let recommendationText = '';
            let recommendationClass = '';

            if (evPerDollarRisk > 0.05) { // > +5 % forventet edge
                recommendationText = 'üü¢ <strong>Anbefaling:</strong> Sterkt positivt EV. Dette ser ut som et veldig godt bet.';
                recommendationClass = 'result-item positive';
            } else if (evPerDollarRisk > 0.01) { // mellom +1 % og +5 %
                recommendationText = 'üü° <strong>Anbefaling:</strong> Positivt EV, men moderat. Vurder innsatsst√∏rrelse n√∏ye.';
                recommendationClass = 'result-item neutral';
            } else if (evPerDollarRisk > -0.01) { // mellom -1 % og +1 %
                recommendationText = 'üü° <strong>Anbefaling:</strong> N√¶r break-even. Edge er liten, v√¶r selektiv.';
                recommendationClass = 'result-item neutral';
            } else {
                recommendationText = 'üî¥ <strong>Anbefaling:</strong> Negativt EV. Ikke anbefalt √• plassere dette bettet.';
                recommendationClass = 'result-item negative';
            }

            recommendationElement.innerHTML = recommendationText;
            recommendationElement.className = recommendationClass;

            document.getElementById('results').style.display = 'block';
        }
    </script>
</body>
