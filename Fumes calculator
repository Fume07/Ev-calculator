        <div class="explanation">
            <h3>ðŸ§  Longshot Bias Korreksjon:</h3>
            <p>Kalkulatoren justerer automatisk sannsynligheten for utfall med hÃ¸ye odds (longshots) for Ã¥ unngÃ¥ systematisk overvurdering av EV. Dette er basert pÃ¥ historisk data som viser at longshots ofte er overvurdert i betting-markeder.</p>
            
            <div class="bias-section">
                <h4>ðŸŽ² Bias-korreksjon nivÃ¥er:</h4>
                <ul>
                    <li><strong>Konservativ (30%):</strong> Reduserer sannsynlighet med 30% for odds over 5.0</li>
                    <li><strong>Moderat (20%):</strong> Reduserer sannsynlighet med 20% for odds over 5.0</li>
                    <li><strong>Aggressiv (50%):</strong> Reduserer sannsynlighet med 50% for odds over 5.0</li>
                </ul>
            </div>
        </div>

        <div class="explanation">
            <h3>ðŸ§  Kelly-kriteriet:</h3>
            <div class="formula">
                Kelly % = (bp - q) / b
                <br>Hvor: b = odds-1, p = sannsynlighet for gevinst, q = sannsynlighet for tap
            </div>
            <p>Kelly-kriteriet anbefaler optimal innsatsstÃ¸rrelse basert pÃ¥ EV og risiko for Ã¥ maksimere langsiktig vekst.</p>
        </div>

        <div class="warning">
            <strong>âš ï¸ Viktig:</strong> Kalkulatoren bruker longshot bias-korreksjon for Ã¥ gi mer realistiske EV-estimater. Bruk alltid konservative innsatser pÃ¥ longshots.
        </div>
    </div>

    <script>
        // Vis/skjul tilpasset bias-innstilling
        document.getElementById('biasCorrection').addEventListener('change', function() {
            const customGroup = document.getElementById('customBiasGroup');
            if (this.value === 'custom') {
                customGroup.style.display = 'block';
            } else {
                customGroup.style.display = 'none';
            }
        });

        function val(v) {
            v = v.replace(',', '.'); // StÃ¸tt bÃ¥de , og . som desimaltegn
            return parseFloat(v);
        }

        function getBiasReduction(odds, biasType, customReduction = 30) {
            if (odds <= 5.0) return 0; // Ingen korreksjon for odds under 5.0
            
            switch(biasType) {
                case 'none': return 0;
                case 'conservative': return 30;
                case 'moderate': return 20;
                case 'aggressive': return 50;
                case 'custom': return customReduction;
                default: return 30;
            }
        }

        function calculateKelly(probability, odds, bankroll) {
            const b = odds - 1; // Net odds
            const p = probability; // Win probability
            const q = 1 - p; // Lose probability
            
            const kelly = (b * p - q) / b;
            return Math.max(0, kelly); // Kelly should not be negative
        }

        function calculateEV() {
            // Hent inputverdier
            const bookmakerOdds = val(document.getElementById('bookmakerOdds').value);
            const payoutPercent = val(document.getElementById('payoutPercent').value);
            const polymarketPriceCents = val(document.getElementById('polymarketPrice').value);
            const betAmount = val(document.getElementById('betAmount').value);
            const biasCorrection = document.getElementById('biasCorrection').value;
            const customBiasReduction = val(document.getElementById('customBiasReduction').value) || 30;

            // Valider input
            if (!bookmakerOdds || !payoutPercent || !polymarketPriceCents || !betAmount) {
                document.getElementById('results').style.display = 'none';
                return;
            }

            // Grunnleggende beregninger
            const polymarketPrice = polymarketPriceCents / 100;
            const edgeAdjustedOdds = bookmakerOdds / (payoutPercent / 100);
            const originalProbability = 1 / edgeAdjustedOdds;
            
            // Bias-korreksjon
            const biasReduction = getBiasReduction(edgeAdjustedOdds, biasCorrection, customBiasReduction);
            const biasAdjustedProbability = originalProbability * (1 - biasReduction / 100);
            
            // Beregninger for original og bias-justert
            const numberOfShares = betAmount / polymarketPrice;
            const potentialWinAmount = numberOfShares * 1.00;
            const potentialProfitAmount = potentialWinAmount - betAmount;
            
            // Original EV
            const originalEV = numberOfShares * (originalProbability - polymarketPrice);
            const originalEVPercent = (originalEV / betAmount) * 100;
            
            // Bias-justert EV
            const biasAdjustedEV = numberOfShares * (biasAdjustedProbability - polymarketPrice);
            const biasAdjustedEVPercent = (biasAdjustedEV / betAmount) * 100;

            // Kelly-kriteriet (bruk bias-justert sannsynlighet)
            const kellyPercent = calculateKelly(biasAdjustedProbability, edgeAdjustedOdds, 1000) * 100; // Anta $1000 bankroll
            const kellyRecommendedBet = (kellyPercent / 100) * 1000; // Kelly anbefalt innsats

            // Vis resultater
            displayResults(edgeAdjustedOdds, originalProbability, biasAdjustedProbability, 
                          polymarketPriceCents, polymarketPrice, numberOfShares, 
                          potentialProfitAmount, potentialWinAmount, betAmount,
                          originalEV, originalEVPercent, biasAdjustedEV, biasAdjustedEVPercent,
                          kellyPercent, kellyRecommendedBet, biasReduction);
        }

        function displayResults(edgeAdjustedOdds, originalProb, biasAdjustedProb, 
                              priceCents, priceDecimal, shares, profit, totalWin, betAmount,
                              originalEV, originalEVPercent, biasEV, biasEVPercent,
                              kellyPercent, kellyBet, biasReduction) {
            
            // Sammenligningstabellen
            const originalRow = document.getElementById('originalRow');
            const biasRow = document.getElementById('biasAdjustedRow');
            
            originalRow.innerHTML = `
                <td><strong>Original</strong></td>
                <td>${(originalProb * 100).toFixed(2)}%</td>
                <td class="${originalEV > 0 ? 'positive' : 'negative'}">$${originalEV.toFixed(2)}</td>
                <td class="${originalEV > 0 ? 'positive' : 'negative'}">${originalEVPercent.toFixed(2)}%</td>
                <td>${getRecommendationText(originalEVPercent, false)}</td>
            `;
            
            biasRow.innerHTML = `
                <td><strong>Bias-justert</strong></td>
                <td>${(biasAdjustedProb * 100).toFixed(2)}%</td>
                <td class="${biasEV > 0 ? 'positive' : 'negative'}">$${biasEV.toFixed(2)}</td>
                <td class="${biasEV > 0 ? 'positive' : 'negative'}">${biasEVPercent.toFixed(2)}%</td>
                <td>${getRecommendationText(biasEVPercent, true)}</td>
            `;

            // Longshot advarsel
            const longshotWarning = document.getElementById('longshotWarning');
            if (edgeAdjustedOdds > 5.0) {
                longshotWarning.style.display = 'block';
                longshotWarning.innerHTML = `
                    ðŸš¨ <strong>LONGSHOT ADVARSEL:</strong> Dette er et hÃ¸y-odds bet (${edgeAdjustedOdds.toFixed(2)}x). 
                    Sannsynligheten er redusert med ${biasReduction}% for Ã¥ kompensere for typisk overvurdering av longshots. 
                    VÃ¦r ekstra forsiktig med innsatsstÃ¸rrelsen!
                `;
            } else {
                longshotWarning.style.display = 'none';
            }

            // Kelly-kriteriet
            const kellySection = document.getElementById('kellySection');
            const kellyRecommendation = document.getElementById('kellyRecommendation');
            
            if (biasEV > 0) {
                kellySection.style.display = 'block';
                let kellyAdvice = '';
                
                if (kellyPercent < 1) {
                    kellyAdvice = `Kelly anbefaler Ã¥ satse ${kellyPercent.toFixed(2)}% av bankroll (ca. $${kellyBet.toFixed(2)} av $1000 bankroll). Dette er et lavrisiko-bet.`;
                } else if (kellyPercent < 5) {
                    kellyAdvice = `Kelly anbefaler Ã¥ satse ${kellyPercent.toFixed(2)}% av bankroll (ca. $${kellyBet.toFixed(2)} av $1000 bankroll). Moderat risiko.`;
                } else if (kellyPercent < 10) {
                    kellyAdvice = `Kelly anbefaler Ã¥ satse ${kellyPercent.toFixed(2)}% av bankroll (ca. $${kellyBet.toFixed(2)} av $1000 bankroll). HÃ¸yere risiko - vurder Ã¥ redusere innsats.`;
                } else {
                    kellyAdvice = `Kelly anbefaler ${kellyPercent.toFixed(2)}% av bankroll, men dette er hÃ¸y risiko. Vurder maksimalt 5-10% av bankroll for sikkerhets skyld.`;
                }
                
                const currentBetPercent = (betAmount / 1000) * 100;
                if (currentBetPercent > kellyPercent * 1.5) {
                    kellyAdvice += `<br><strong>âš ï¸ Din innsats (${currentBetPercent.toFixed(1)}% av $1000) er hÃ¸yere enn Kelly anbefaler!</strong>`;
                }
                
                kellyRecommendation.innerHTML = kellyAdvice;
            } else {
                kellySection.style.display = 'none';
            }

            // Grunnleggende resultater
            document.getElementById('edgeAdjustedOdds').innerHTML = `<strong>Edge-justerte Odds:</strong> ${edgeAdjustedOdds.toFixed(3)}`;
            document.getElementById('impliedProbability').innerHTML = `<strong>Original Sannsynlighet:</strong> ${(originalProb * 100).toFixed(2)}% â†’ <strong>Bias-justert:</strong> ${(biasAdjustedProb * 100).toFixed(2)}%`;
            document.getElementById('polymarketPriceDisplay').innerHTML = `<strong>Polymarket Pris:</strong> ${priceCents}Â¢ ($${priceDecimal.toFixed(2)})`;
            document.getElementById('numberOfShares').innerHTML = `<strong>Antall Shares:</strong> ${shares.toFixed(1)}`;
            document.getElementById('potentialWin').innerHTML = `<strong>Potensiell Gevinst ved Seier:</strong> $${profit.toFixed(2)} (total utbetaling: $${totalWin.toFixed(2)})`;
            document.getElementById('potentialLoss').innerHTML = `<strong>Potensiell Tap:</strong> $${betAmount.toFixed(2)}`;

            // Hovedanbefaling basert pÃ¥ bias-justert EV
            const recommendationElement = document.getElementById('recommendation');
            let recommendationText = getDetailedRecommendation(biasEVPercent, edgeAdjustedOdds > 5.0);
            let recommendationClass = biasEV > 0 ? 'result-item positive' : 'result-item negative';
            
            recommendationElement.innerHTML = recommendationText;
            recommendationElement.className = recommendationClass;

            document.getElementById('results').style.display = 'block';
        }

        function getRecommendationText(evPercent, isBiasAdjusted) {
            if (evPercent > 5) return 'ðŸŸ¢ Sterkt positivt';
            if (evPercent > 0) return 'ðŸŸ¡ Positivt';
            if (evPercent > -2) return 'ðŸŸ¡ NÃ¦r break-even';
            return 'ðŸ”´ Negativt';
        }

        function getDetailedRecommendation(evPercent, isLongshot) {
            let recommendation = '';
            
            if (evPercent > 5) {
                recommendation = 'ðŸŸ¢ <strong>Anbefaling:</strong> Sterkt positivt bias-justert EV! ';
                if (isLongshot) {
                    recommendation += 'Men siden dette er en longshot, vurder konservativ innsats.';
                } else {
                    recommendation += 'Dette kan vÃ¦re et godt bet.';
                }
            } else if (evPercent > 0) {
                recommendation = 'ðŸŸ¡ <strong>Anbefaling:</strong> Positivt bias-justert EV, men relativt lavt. ';
                if (isLongshot) {
                    recommendation += 'Som longshot bÃ¸r du vÃ¦re ekstra forsiktig med innsatsstÃ¸rrelsen.';
                } else {
                    recommendation += 'Vurder innsatsstÃ¸rrelse nÃ¸ye.';
                }
            } else if (evPercent > -2) {
                recommendation = 'ðŸŸ¡ <strong>Anbefaling:</strong> NÃ¦r break-even etter bias-justering. ';
                recommendation += isLongshot ? 'Som longshot er risikoen trolig ikke verdt det.' : 'Vurder om risikoen er verdt det.';
            } else {
                recommendation = 'ðŸ”´ <strong>Anbefaling:</strong> Negativt bias-justert EV. ';
                recommendation += 'Ikke anbefalt Ã¥ plassere dette bettet.';
            }
            
            return recommendation;
        }
    </script>
