    .container { background: #fff; padding: 30px; border-radius: 10px; box-shadow: 0 4px 16px #dde; max-width: 480px; margin: 0 auto; }
    h1 { text-align: center; color: #253375; }
    label { display: block; margin: 12px 0 4px; font-weight: bold; }
    input, select { width: 100%; padding: 8px; border-radius: 4px; border: 1px solid #bbb; box-sizing: border-box; }
    button { margin-top: 20px; width: 100%; background: #3498db; color: #fff; padding: 14px; border: none; border-radius: 6px; font-size: 17px; font-weight: bold; }
    .result { background: #f8faff; margin-top: 28px; padding: 18px; border-radius: 7px; }
    .subtitle { color: #669; font-size: 15px; text-align:center; margin-bottom:16px;}
    .good { color: #218c36;}
    .warn { color: #e67e22; font-weight: bold;}
    .danger { color: #cc0000; font-weight: bold;}
    .outcome { margin:10px 0 0 0;}
  </style>
