    <script>
        function val(v) {
            v = v.replace(',', '.'); // StÃ¸tt bÃ¥de , og . som desimaltegn
            return parseFloat(v);
        }

        function calculateEV() {
            // Hent inputverdier, alltid fri flyt og stille
            const bookmakerOdds = val(document.getElementById('bookmakerOdds').value);
            const payoutPercent = val(document.getElementById('payoutPercent').value);
            const polymarketPriceCents = val(document.getElementById('polymarketPrice').value);
            const betAmount = val(document.getElementById('betAmount').value);

            // Om noe ikke kan regnes, vis blanke resultater -- ingen varsler
            if (!bookmakerOdds || !payoutPercent || !polymarketPriceCents || !betAmount) {
                document.getElementById('results').style.display = 'none';
                return;
            }
            // Ingen sperrer â€“ kun du mÃ¥ trykke knappen
            const polymarketPrice = polymarketPriceCents / 100;
            const edgeAdjustedOdds = bookmakerOdds / (payoutPercent / 100);
            const impliedProbability = 1 / edgeAdjustedOdds;
            const numberOfShares = betAmount / polymarketPrice;
            const potentialWinAmount = numberOfShares * 1.00;
            const potentialProfitAmount = potentialWinAmount - betAmount;
            const potentialLossAmount = betAmount;
            const expectedValue = numberOfShares * (impliedProbability - polymarketPrice);
            const evPercentage = (expectedValue / betAmount) * 100;

            document.getElementById('edgeAdjustedOdds').innerHTML = `<strong>Edge-justerte Odds:</strong> ${edgeAdjustedOdds.toFixed(3)}`;
            document.getElementById('impliedProbability').innerHTML = `<strong>Implisitt Sannsynlighet:</strong> ${(impliedProbability * 100).toFixed(2)}%`;
            document.getElementById('polymarketPriceDisplay').innerHTML = `<strong>Polymarket Pris:</strong> ${polymarketPriceCents}Â¢ ($${polymarketPrice.toFixed(2)})`;
            document.getElementById('numberOfShares').innerHTML = `<strong>Antall Shares:</strong> ${numberOfShares.toFixed(1)}`;
            document.getElementById('potentialWin').innerHTML = `<strong>Potensiell Gevinst ved Seier:</strong> $${potentialProfitAmount.toFixed(2)} (total utbetaling: $${potentialWinAmount.toFixed(2)})`;
            document.getElementById('potentialLoss').innerHTML = `<strong>Potensiell Tap:</strong> $${potentialLossAmount.toFixed(2)}`;
            const evElement = document.getElementById('expectedValue');
            evElement.innerHTML = `<strong>Expected Value (EV):</strong> $${expectedValue.toFixed(2)}`;
            if (expectedValue > 0) {
                evElement.className = 'result-item positive';
            } else if (expectedValue < 0) {
                evElement.className = 'result-item negative';
            } else {
                evElement.className = 'result-item neutral';
            }
            const evPercentElement = document.getElementById('evPercentage');
            evPercentElement.innerHTML = `<strong>EV som % av innsats:</strong> ${evPercentage.toFixed(2)}%`;
            evPercentElement.className = expectedValue > 0 ? 'result-item positive' : 
                                       expectedValue < 0 ? 'result-item negative' : 'result-item neutral';
            const recommendationElement = document.getElementById('recommendation');
            let recommendationText = '';
            let recommendationClass = '';
            if (expectedValue > betAmount * 0.05) {
                recommendationText = 'ðŸŸ¢ <strong>Anbefaling:</strong> Sterkt positivt EV! Dette er et godt bet.';
                recommendationClass = 'result-item positive';
            } else if (expectedValue > 0) {
                recommendationText = 'ðŸŸ¡ <strong>Anbefaling:</strong> Positivt EV, men relativt lavt. Vurder innsatsstÃ¸rrelse.';
                recommendationClass = 'result-item neutral';
            } else if (expectedValue > -betAmount * 0.02) {
                recommendationText = 'ðŸŸ¡ <strong>Anbefaling:</strong> NÃ¦r break-even. Vurder om det er verdt risikoen.';
                recommendationClass = 'result-item neutral';
            } else {
                recommendationText = 'ðŸ”´ <strong>Anbefaling:</strong> Negativt EV. Ikke anbefalt Ã¥ plassere dette bettet.';
                recommendationClass = 'result-item negative';
            }
            recommendationElement.innerHTML = recommendationText;
            recommendationElement.className = recommendationClass;
            document.getElementById('results').style.display = 'block';
        }
    </script>
